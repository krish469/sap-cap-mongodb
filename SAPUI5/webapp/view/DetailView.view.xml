<mvc:View controllerName="com.application1.controller.DetailView" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<App id="detailPage">
		<pages>
			<Page class="sapUiResponsiveMargin" title="Display Image, Vibration and ROI Details">
				<content>
					<f:SimpleForm editable="false" labelSpanL="3" labelSpanM="3" layout="ResponsiveGridLayout" columnsXL="1" columnsL="1" columnsM="1">
						<f:content>
							<Label text="Material"/>
							<Text id="Material" text="{OrderDetails>/Material}"/>
							<Label text="Quantity"/>
							<Text id="Quantity" text="{OrderDetails>/Quantity}"/>
							<Label text="QUOM"/>
							<Text id="QUOM" text="{OrderDetails>/QUOM}"/>
							<Label text="Price"/>
							<Text id="Price" text="{OrderDetails>/Price}"/>
							<Label text="Currency"/>
							<Text id="Currency" text="{OrderDetails>/Currency}"/>
						</f:content>
					</f:SimpleForm>
					<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
						<items>
							<IconTabFilter icon="sap-icon://picture" text="Image" key="CapturedImage">
								<ScrollContainer height="100%" width="100%" horizontal="false" vertical="true">
									<Image src="data:{MyMaterial>ImageContentType};base64,{MyMaterial>/ImageData}" width="400px" height="400px"/>
								</ScrollContainer>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>